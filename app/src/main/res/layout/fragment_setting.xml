<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_back"
        tools:context=".main_menu.settings.SettingFragment">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_night"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_user_image"
                    android:background="@drawable/circle_image_bg"/>

                <TextView
                    android:id="@+id/user_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/NicknameText"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:text="@string/nickname"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SettingsTextTitle"
                    android:textColor="@color/white"
                    android:text="@string/account"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/google_button"
                        android:layout_width="@dimen/settings_sites_size"
                        android:layout_height="@dimen/settings_sites_size"
                        android:src="@drawable/ic_google"
                        android:background="@drawable/circle_image_bg"/>

                    <ImageButton
                        android:id="@+id/vk_button"
                        android:layout_width="@dimen/settings_sites_size"
                        android:layout_height="@dimen/settings_sites_size"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_vk"
                        android:background="@drawable/circle_image_bg"/>

                    <ImageButton
                        android:id="@+id/facebook_button"
                        android:layout_width="@dimen/settings_sites_size"
                        android:layout_height="@dimen/settings_sites_size"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_facebook"
                        android:background="@drawable/circle_image_bg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/interface_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingsTextTitle"
                        android:textColor="@color/white"
                        android:text="@string/interface_str"/>

                    <TextView
                        android:id="@+id/text_size_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingsTextSubTitle"
                        android:textColor="@color/white"
                        android:text="@string/text_size"
                        android:layout_marginTop="9dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/text_size_seekbar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_weight="1"
                            android:progressTint="@color/secondary"
                            android:progressBackgroundTint="@color/white"
                            />

                        <TextView
                            android:id="@+id/text_size_seekbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/RadioButtonText"
                            android:textColor="@color/white"
                            android:text="0%"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/language_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingsTextSubTitle"
                        android:textColor="@color/white"
                        android:text="@string/language"
                        android:layout_marginTop="9dp"/>

                    <RadioGroup
                        android:id="@+id/language_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_russian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl"
                            android:layout_gravity="start"
                            android:checked="true"
                            android:minHeight="10dp"
                            style="@style/RadioButtonText"
                            android:textColor="@color/white"
                            android:text="@string/russian" />

                        <RadioButton
                            android:id="@+id/radio_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layoutDirection="rtl"
                            android:minHeight="10dp"
                            style="@style/RadioButtonText"
                            android:text="@string/english"
                            android:textColor="@color/white" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/color_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingsTextSubTitle"
                        android:textColor="@color/white"
                        android:text="@string/color_theme"
                        android:layout_marginTop="11dp"/>

                    <RadioGroup
                        android:id="@+id/color_theme_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_dark_theme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl"
                            android:layout_gravity="start"
                            android:checked="true"
                            android:minHeight="14dp"
                            style="@style/RadioButtonText"
                            android:textColor="@color/white"
                            android:text="@string/dark_theme" />

                        <RadioButton
                            android:id="@+id/radio_light_theme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layoutDirection="rtl"
                            android:minHeight="14dp"
                            style="@style/RadioButtonText"
                            android:text="@string/light_theme"
                            android:textColor="@color/white" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notifications_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SettingsTextTitle"
                        android:textColor="@color/white"
                        android:text="@string/notification_sound"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/notification_switch_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/RadioButtonText"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/dark_theme"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/notification_switch"
                            android:minHeight="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sound_switch_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/RadioButtonText"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/light_theme"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sound_switch"
                            android:minHeight="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>